<odoo>
    <data>
       <record id="view_inherit_delivery_form" model="ir.ui.view">
            <field name="name">delivery.order.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
               <xpath expr="//field[@name='picking_type_id']" position="after">
                    <field name="customer_order_delivery"/>
               </xpath>
             </field>
        </record>
        
        <!-- Invoice  -->
        <record id="view_inherit_invoice_form" model="ir.ui.view">
            <field name="name">invoice.order.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='ref']" position="after">
                 <field name="customer_order_invoice"/>
              </xpath>
            </field>
        </record>
        
        <record id="view_inherit_sales_form" model="ir.ui.view">
            <field name="name">sales.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='partner_id']" position="after">
                 <field name="customer_order"/>
              </xpath>
           </field>
        </record>
    </data>
</odoo>